{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["mocha"],
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true
  },
  "exclude": ["*/node_modules/*"]
}
