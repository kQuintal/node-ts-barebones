{
  "name": "node-ts-barebones",
  "version": "0.0.1",
  "description": "Barebones NodeJS setup with TypeScript, Jest, TSLint and Prettier",
  "author": "Tiago Pina - <tiagoaspina@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "go": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/index.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "mocha -r ts-node/register 'test/**/*.ts"
  },
  "keywords": [
    "node",
    "typescript",
    "jest",
    "prettier"
  ],
  "dependencies": {
    "@restless/restless": "^0.4.2",
    "@restless/sanitizers": "^0.2.5",
    "axios": "^0.21.1",
    "chai": "^4.3.7",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "ethers": "5.7.2",
    "express": "^4.17.1",
    "pretty-error": "^2.1.1",
    "winston": "^3.1.0",
    "winston-daily-rotate-file": "^3.6.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.4",
    "@types/cors": "^2.8.12",
    "@types/sinon": "^9.0.11",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.5.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.23.0",
    "sinon": "^10.0.0",
    "sinon-chai": "^3.7.0",
    "@types/dotenv": "^6.1.0",
    "@types/jest": "^23.3.13",
    "@types/mocha": "^8.2.2",
    "@types/node": "^10.12.18",
    "chalk": "^2.4.2",
    "husky": "^1.3.1",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.15",
    "prettier": "^1.15.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "^6.1.3",
    "typescript": "^3.2.4"
  },
  "lint-staged": {
    "{src,tests}/**/*.{ts,js,json}": [
      "prettier --config .prettierrc --write './src/**/*.ts'",
      "tslint -p tsconfig.json -c tslint.json",
      "npm run tests",
      "git add"
    ]
  }
}
